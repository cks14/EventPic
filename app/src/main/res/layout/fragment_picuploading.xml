<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/card_app_photo1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:elevation="5dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/card_app_photo"
        android:layout_marginBottom="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        >


    <ImageView
        android:id="@+id/image"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:src="@drawable/upload"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/card_app_photo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sp40"
        android:layout_marginTop="10dp"
        android:elevation="5dp"
        app:cardElevation="5dp"
        android:layout_centerInParent="true"
        app:cardCornerRadius="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp">

        <TextView
            android:id="@+id/tv_app_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:hint="Picture Upload"
            android:textStyle="bold"
            android:gravity="center|left"
            android:textColor="@color/grey"
            android:textSize="15sp"/>

        <LinearLayout
            android:id="@+id/ll_appl_photo"
            android:layout_gravity="end|center"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:elevation="8dp"
            android:layout_width="140dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="140dp"
                android:background="@drawable/blue_box"
                android:layout_height="30dp">

                <TextView
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_marginLeft="30dp"
                    android:layout_gravity="center"
                    android:text="Upload Pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/upload"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>

            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>





</RelativeLayout>